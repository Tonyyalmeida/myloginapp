      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form  action="/register" method="post" id="form1">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name="email" placeholder="Email">
  </div>
    <div class="form-group">
    <label for="exampleUserName">User Name</label>
    <input type="username" class="form-control" id="exampleUserName" name="username" placeholder="User Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password1" placeholder="Password">
  </div>
    <div class="form-group">
    <label for="exampleInputPassword2">Confirm Password</label>
    <input type="password" class="form-control" id="exampleInputPassword2" name="password2"  placeholder="Confirm Password">
